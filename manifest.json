{
  "manifest_version": 2,
  "name": "Color Picker Pro",
  "version": "1.1.0",
  "description": "A professional color picker with advanced features including color harmonies, palettes, and color theory tools.",
  "author": "Ali",
  "homepage_url": "https://github.com/yourusername/color-picker-pro",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "color-picker-pro@yourdomain.com",
      "strict_min_version": "79.0"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png",
    "512": "icons/icon-512.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Color Picker Pro",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png",
      "512": "icons/icon-512.png"
    }
  },

  "web_accessible_resources": [
    "styles.css",
    "icons/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'"

}